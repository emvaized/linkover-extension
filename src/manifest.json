{
    "name": "Linkover â€“ Info Tooltip on Hover for Links",
    "description": "__MSG_appDescription__",
    "version": "1.0",
    "author": "emvaized",
    "manifest_version": 3,
    "default_locale": "en",
    "permissions": [
        "<all_urls>",
        "storage"
    ],
    "icons": {
        "128": "./assets/icon.png"
    },
    "background": {
        "scripts": ["background.js"],
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "index.js"
            ],
            "css": [
                "index.css"
            ],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_icon": "./assets/icon.png",
        "default_title": "__MSG_appName__",
        "default_popup": "options/options.html"
    },
    "options_ui": {
        "page": "options/options.html",
        "open_in_tab": false
    }
}